# Environment Configuration for Docker Compose

# Node Environment
NODE_ENV=production

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=SecurePassword2024!
MONGO_DATABASE=healthcare

# JWT Secrets (Generate secure secrets in production!)
JWT_ACCESS_SECRET=your_super_secret_access_token_key_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_in_production

# Token Expiry
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Security
SALT_ROUNDS=12

# Super Admin Configuration
SUPER_ADMIN_EMAIL=superadmin@healthcare.local
SUPER_ADMIN_PASSWORD=SuperSecurePassword2024!
SUPER_ADMIN_NAME=System Administrator

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost,http://frontend:80

# Frontend API URL
VITE_API_BASE_URL=http://localhost:5000/api

# Logging
LOG_LEVEL=info

# Email Service (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=healthcare@example.com

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
